<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/powerbi.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Head", required: false)

</head>
@{
    // Define new pages here:
    // new[] {"Viewbag.Page", "ControllerMethod", "ControllerName"}
    var pageList = new List<string[]>()
    {
        new[] {"Home", "Index", "Home"},
        new [] {"Settings", "Settings", "Home"}
    };
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-brand">Cortana Intelligence | Lead Scoring and Generation</div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @foreach (var page in pageList)
                    {
                        var htmlClass = "";
                        <li @Html.Raw(htmlClass)>@Html.ActionLink(page[0], page[1], page[2])</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/powerbi.js"></script>
</body>
</html>
